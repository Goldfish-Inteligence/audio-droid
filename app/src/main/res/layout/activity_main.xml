<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/sendingLayout"
        layout="@layout/server_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@{@string/start_receive}"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/senderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/senderLabel"
        app:layout_constraintEnd_toStartOf="@+id/ipReceiverText"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerReceive" />

    <Button
        android:id="@+id/startReceivingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="startSender"
        android:text="@string/start_receive"
        app:layout_constraintEnd_toStartOf="@+id/stopReceivingButton"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipSenderText" />

    <EditText
        android:labelFor="@+id/senderLabel"
        android:id="@+id/ipSenderText"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginTop="52dp"
        android:digits="@string/ip_characters"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerReceive"
        android:hint="@string/server_ip"
        android:autofillHints="" />

    <Button
        android:id="@+id/stopReceivingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:onClick="stopSender"
        android:text="@string/stop_receive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipSenderText" />


    <View
        android:id="@+id/dividerReceive"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />



    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</androidx.constraintlayout.widget.ConstraintLayout>