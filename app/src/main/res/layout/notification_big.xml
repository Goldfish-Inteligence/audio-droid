<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:paddingBottom="32dp">


    <TextView
        android:id="@+id/textConnectionName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:layout_weight="1"
        android:text="@string/connecting" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonNotificationRecv"
            style="@style/toggleReceiveButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/big_notification_button_margin"
            android:background="@drawable/ic_receiving_24"
            android:contentDescription="" />

        <ImageView
            android:id="@+id/buttonNotificationSend"
            style="@style/toggleSendButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/big_notification_button_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_sending_24"
            android:contentDescription="" />

        <ImageView
            android:id="@+id/buttonNotificationMute"
            style="@style/toggleMicButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/big_notification_button_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_mic_on_24"
            android:contentDescription="" />

        <ImageView
            android:id="@+id/buttonNotificationDeaf"
            style="@style/toggleMicButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/big_notification_button_margin"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_headset_24"
            android:contentDescription="" />


    </LinearLayout>

</LinearLayout>
